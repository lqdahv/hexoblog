<style type="text/css">

</style>
<div>
    <div class="archiveDes">
    <h3 class="archive-title">
    	<%- page.category %></span>
   	</h3>
    </div>
	<%for(var item of page.posts.data){%>
	<%
	 var img=item.content.match(/<img src="(.*?)"/)
	 var thumbnail=item.img
	 %>
	<div class="article-pre">
		<img src="<%- img?img[1]:thumbnail %>" style="display: <%- img||thumbnail?'':'none' %>">
		<div class="article-pre-right">
			<h4><span style="display: <%- item.sticky?'block':'none' %>">置顶</span><a href="<%- item.permalink %>"><%- item.title %></a></h4>
			<div><%- truncate(strip_html(item.content),{length:75}) %></div>
			<div class="prePostInf">
				<span><i class="fa-regular fa-calendar-check"></i> <%- date(item.date,'YYYY年M月D') %></span>
				
				<a href="<%- (item.categories.data.length?item.categories.data[0].permalink:'javascript:;') %>"><i class="fa-regular fa-bookmark"></i><%- item.categories.data.length?item.categories.data[0].name:'未分类' %></a>
			</div>
		</div>
	</div>
	<%}%>

</div>
